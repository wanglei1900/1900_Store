.header {
  display: flex;
  padding: 10rpx 0;
}
.header .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
}
.header .search {
  display: 1;
  background-color: #eee;
  position: relative;
}
.header .search .iconfont {
  position: absolute;
  font-size: 30rpx;
  top: 15rpx;
  left: 10rpx;
}
.header .search input {
  width: 370rpx;
  margin-left: 50rpx;
  height: 60rpx;
}
.header .search input .placeholder {
  font-size: 26rpx;
}
.header button {
  width: 144rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0 4rpx;
  margin: 0 10rpx;
  color: #ffa801;
}
.navScroll {
  white-space: nowrap;
  padding: 10rpx;
}
.navScroll .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
.navScroll .navItem.active {
  border-bottom: 1px solid #ffa801;
}

